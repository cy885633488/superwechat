<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/layout_boutique"
    android:layout_marginBottom="2dp">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_boutique_thumb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nopic"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_toRightOf="@id/niv_boutique_thumb"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_boutique_1"
        android:textColor="#ff0093"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"/>
    <TextView
        android:id="@+id/tv_boutique_2"
        android:layout_toRightOf="@id/niv_boutique_thumb"
        android:layout_below="@id/tv_boutique_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="商品功能"/>
    <TextView
        android:id="@+id/tv_boutique_3"
        android:layout_toRightOf="@id/niv_boutique_thumb"
        android:layout_below="@id/tv_boutique_2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#403f3f"
        android:text="不晓得是商品的啥子"/>
</RelativeLayout>